<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ivoid.ItemsActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal">
    <TextView
        android:id="@+id/text_view_items"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="items"
        android:textSize="30dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/image_view_search_icon"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:src="@drawable/ic_magnify_white_48dp"/>
        <EditText
            android:id="@+id/edit_text_search_item"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/image_view_sort_icon"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:src="@drawable/ic_sort_white_48dp"/>
    </LinearLayout>
    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:elevation="100dp"
        android:onClick="itemsInfoClick"
        android:layout_margin="8dp">
        <LinearLayout
            android:id="@+id/item_card_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/image_view_item"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:src="@drawable/health_potion_icon"
                android:elevation="100dp"
                />
            <TextView
                android:id="@+id/text_view__item_name"
                android:textAlignment="center"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:gravity="center_horizontal"
                android:text="Health Potion"
                android:textSize="10dp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
