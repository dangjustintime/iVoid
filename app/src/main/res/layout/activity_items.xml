<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ivoid.ItemsActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal">
    <TextView
        android:id="@+id/text_view_items"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="items"
        android:textSize="30dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image_view_search_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_magnify_white_48dp"/>
        <EditText
            android:id="@+id/edit_text_search_item"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/image_view_sort_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_sort_white_48dp"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">
    </android.support.v7.widget.RecyclerView>
    <Button
        android:id="@+id/item_info_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Item Info Activity"
        android:onClick="itemsInfoClick"/>

</LinearLayout>
