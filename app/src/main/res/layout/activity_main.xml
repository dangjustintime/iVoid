<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ivoid.MainActivity">
    <ImageView
        android:id="@+id/vel_koz_image_view"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/velkoz"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/image_button_items_main"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/items_button"
                android:src="@drawable/item_icon"
                android:onClick="itemsClick"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Items"
                android:textStyle="bold"
                android:textSize="12dp"
                android:textColor="@color/colorAccent"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/image_button_champions_main"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/champion_button"
                android:src="@drawable/amumu"
                android:scaleType="fitCenter"
                android:onClick="championsClick"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Champions"
                android:textStyle="bold"
                android:textSize="12dp"
                android:textColor="@color/colorAccent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/image_button_updates_main"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/updates_button"
                android:src="@drawable/exclamation"
                android:scaleType="fitCenter"
                android:onClick="updatesClick"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Updates"
                android:textStyle="bold"
                android:textSize="12dp"
                android:textColor="@color/colorAccent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/image_button_random_main"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="@string/random_button"
                android:src="@drawable/dice"
                android:scaleType="fitXY"
                android:onClick="randomClick"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Random"
                android:textStyle="bold"
                android:textSize="12dp"
                android:textColor="@color/colorAccent"/>
        </LinearLayout>
    </LinearLayout>
