<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ivoid.MainActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/colorPrimary"
        android:subtitleTextColor="@color/colorAccent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="4">

            <android.support.v7.view.menu.ActionMenuItemView
                android:id="@+id/action_menu_item_view_champions"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:autoSizeMinTextSize="30dp"
                android:gravity="center"
                android:text="Champions"
                android:textAlignment="gravity"
                android:textColor="@color/colorAccent" />

            <android.support.v7.view.menu.ActionMenuItemView
                android:id="@+id/action_menu_item_view_items"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:autoSizeMinTextSize="30dp"
                android:gravity="center"
                android:text="Items"
                android:textAlignment="gravity"
                android:textColor="@color/colorAccent" />

            <android.support.v7.view.menu.ActionMenuItemView
                android:id="@+id/action_menu_item_view_updates"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:autoSizeMinTextSize="30dp"
                android:gravity="center"
                android:text="Updates"
                android:textAlignment="gravity"
                android:textColor="@color/colorAccent" />

            <android.support.v7.view.menu.ActionMenuItemView
                android:id="@+id/action_menu_item_view_random"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:autoSizeMinTextSize="30dp"
                android:gravity="center"
                android:text="Random"
                android:textAlignment="gravity"
                android:textColor="@color/colorAccent" />
        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="105dp"
        android:layout_marginStart="105dp"
        android:layout_marginTop="144dp"
        android:onClick="randomClick"
        android:text="@string/random_wheel"
        tools:layout_editor_absoluteX="126dp"
        tools:layout_editor_absoluteY="48dp" />
</LinearLayout>
